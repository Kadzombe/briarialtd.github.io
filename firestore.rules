rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to create a new contact submission
    // This allows the general inquiry form to work
    match /contactSubmissions/{submissionId} {
      allow create: if request.resource.data.name is string &&
                       request.resource.data.email is string &&
                       request.resource.data.message is string &&
                       request.resource.data.submittedAt == request.time;
    }

    // Allow anyone to create a new quote request
    match /quoteSubmissions/{submissionId} {
      allow create: if request.resource.data.name is string &&
                       request.resource.data.email is string &&
                       request.resource.data.projectDetails is string &&
                       request.resource.data.submittedAt == request.time;
    }

    // Allow anyone to create a new demo request
    match /demoSubmissions/{submissionId} {
       allow create: if request.resource.data.name is string &&
                        request.resource.data.email is string &&
                        request.resource.data.projectDetails is string &&
                        request.resource.data.date is string &&
                        request.resource.data.time is string &&
                        request.resource.data.submittedAt == request.time;
    }
  }
}