rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to create documents in these collections, but no one to read, update, or delete them.
    // This is a common pattern for public contact/submission forms.
    match /contactSubmissions/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    match /quoteSubmissions/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    match /demoSubmissions/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
