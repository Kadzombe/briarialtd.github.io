rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    
    match /contactSubmissions/{submissionId} {
      allow write: if true;
      allow read: if false;
    }

    match /quoteSubmissions/{submissionId} {
      allow write: if true;
      allow read: if false;
    }

    match /demoSubmissions/{submissionId} {
      allow write: if true;
      allow read: if false;
    }
  }
}
