rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default to denying all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to submit a contact form
    match /contactSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Allow anyone to submit a quote request
    match /quoteSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Allow anyone to submit a demo request
    match /demoSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
