rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to create documents in these specific collections,
    // but do not allow them to be read, updated, or deleted from the client.
    // This is a secure pattern for public-facing contact forms.
    match /contactSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    match /quoteSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    match /demoSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
