rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all reads and writes to all documents
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to create documents in the 'contactSubmissions' collection
    match /contactSubmissions/{docId} {
      allow create: if true;
    }

    // Allow anyone to create documents in the 'quoteSubmissions' collection
    match /quoteSubmissions/{docId} {
      allow create: if true;
    }

    // Allow anyone to create documents in the 'demoSubmissions' collection
    match /demoSubmissions/{docId} {
      allow create: if true;
    }
  }
}
