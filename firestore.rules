
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to write to these collections for now.
    // In a production app, you would want to restrict this further.
    match /contactSubmissions/{docId} {
      allow create: if true;
    }
    match /quoteSubmissions/{docId} {
      allow create: if true;
    }
    match /demoSubmissions/{docId} {
      allow create: if true;
    }

    // By default, deny all other reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
