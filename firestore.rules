rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny read/write access to all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to create a document in the contactSubmissions collection
    match /contactSubmissions/{submissionId} {
      allow create: if true;
    }

    // Allow anyone to create a document in the quoteSubmissions collection
    match /quoteSubmissions/{submissionId} {
      allow create: if true;
    }

    // Allow anyone to create a document in the demoSubmissions collection
    match /demoSubmissions/{submissionId} {
      allow create: if true;
    }
  }
}
