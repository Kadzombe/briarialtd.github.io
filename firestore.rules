// These rules grant write access to specific collections for form submissions,
// while keeping the rest of the database private.
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to create a document in the contactSubmissions collection.
    // This is for your general inquiry form.
    match /contactSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if false; 
    }

    // Allow anyone to create a document in the quoteSubmissions collection.
    // This is for your quote request form.
    match /quoteSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    // Default rule: Deny all reads and writes to other collections.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
