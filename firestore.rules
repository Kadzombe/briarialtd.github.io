
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to create a document in the contactSubmissions collection.
    // No one can read, update, or delete submissions.
    match /contactSubmissions/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Allow anyone to create a document in the quoteSubmissions collection.
    // No one can read, update, or delete submissions.
    match /quoteSubmissions/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Allow anyone to create a document in the demoSubmissions collection.
    // No one can read, update, or delete submissions.
    match /demoSubmissions/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
